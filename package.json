{
  "name": "client",
  "version": "0.1.0",
  "scripts": {
    "styles": "tailwind build client/src/styles.css -o client/src/bundled.css",
    "prebuild": "yarn styles",
    "build": "bsb -make-world",
    "watch": "bsb -make-world -w -ws _ ",
    "clean": "bsb -clean-world",
    "webpack": "webpack -w",
    "webpack:dev": "webpack",
    "webpack:production": "NODE_ENV=production webpack",
    "dev-server": "webpack-dev-server",
    "db:down": "docker-compose -f docker-compose.dev.yml down --volumes",
    "db:up": "docker-compose -f docker-compose.dev.yml up",
    "backend": "yarn wait-db && make migrate && make watch",
    "wait-db": "wait-on tcp:${ASYNC_PG_PORT:-5432} --delay 2000 --timeout 5000",
    "start": "yarn db:down && concurrently --kill-others --names db,reason,webpack,backend 'yarn db:up' 'yarn watch' 'yarn styles && yarn dev-server' 'yarn backend'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@ahrefs/bs-atdgen-codec-runtime": "^2.0.1",
    "@anuragsoni/routes": "^0.8.0",
    "autoprefixer": "^10.0.4",
    "bs-fetch": "^0.6.2",
    "postcss": "^8.1.14",
    "postcss-loader": "^4.1.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "reason-react": ">=0.7.1",
    "tailwindcss": "^2.0.1",
    "wait-on": "^5.1.0"
  },
  "devDependencies": {
    "bs-platform": "^8.0.3",
    "concurrently": "^5.3.0",
    "css-loader": "^3.2.0",
    "html-webpack-plugin": "^3.2.0",
    "style-loader": "^1.0.0",
    "webpack": "^4.0.1",
    "webpack-cli": "^3.1.1",
    "webpack-dev-server": "^3.1.8"
  }
}